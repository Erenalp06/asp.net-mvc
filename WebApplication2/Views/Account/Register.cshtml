@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
	body {
		background-color: #f5f5f5;
		font-family: 'Roboto', sans-serif;
	}

	form {
		background-color: #fff;
		border: 1px solid #ddd;
		border-radius: 5px;
		padding: 30px;
		margin-top: 50px;
		box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
	}

	.form-label {
		font-weight: bold;
		color: #555;
	}

	.form-group {
		margin-bottom: 20px;
		position: relative;
	}

	.form-group:last-child {
		margin-bottom: 0;
	}

	.form-control {
		border-radius: 25px;
		padding-left: 40px;
		border: none;
		background-color: #f0f0f0;
		color: #555;
		box-shadow: none;
		height: 50px;
		transition: all 0.3s ease-in-out;
	}

	.form-control:focus {
		box-shadow: none;
		background-color: #fff;
	}

	.form-control:focus + .fa-circle-user,
	.form-control:focus + .fa-lock {
		color: #007bff;
	}

	.form-control:hover {
		background-color: #e2e2e2;
	}

	.fa-circle-user,
	.fa-lock {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		left: 15px;
		color: #a5a5a5;
		font-size: 18px;
	}

	.btn-primary {
		background-color: #007bff;
		border-color: #007bff;
		border-radius: 25px;
		font-weight: bold;
		transition: all 0.3s ease-in-out;
	}

	.btn-primary:hover {
		background-color: #0069d9;
		border-color: #0062cc;
	}

	.btn-primary:focus {
		box-shadow: none;
	}

	.fa-user-plus {
		font-size: 18px;
	}
	

		.form-control {
			height: 45px;
		}

		.fa-circle-user,
		.fa-lock {
			font-size: 16px;
		}
	}
</style>

<div class="row">
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>
<div class="row">
	<div class="col-4 offset-4">
		
		 <form method="post">
			<div asp-validation-summary="All" class="text-danger small"></div>
			<div class="form-group mb-3">
				<label asp-for="Username" class="form-label visually-hidden">First Name</label>
				<input asp-for="Username" class="form-control" placeholder="Username" />
				<span class="fa-solid fa-circle-user"></span>
				<span asp-validation-for="Username" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Password" class="form-label visually-hidden">Last Name</label>
				<input asp-for="Password" class="form-control" placeholder="Password" type="password" />								
								<span class="fa-solid fa-lock"></span>
				<span asp-validation-for="Password" class="text-danger small"></span>
			</div>			
			<div class="form-group mb-3">
				<label asp-for="RePassword" class="form-label visually-hidden">Password</label>
				<input asp-for="RePassword" class="form-control" placeholder="RePassword" type="password" />
				<span class="fa-solid fa-lock"></span>
				<span asp-validation-for="RePassword" class="text-danger small"></span>
			</div>			
			<div class="form-group d-grid mb-3">
				<button type="submit" class="btn btn-primary"><i class="fa-solid fa-user-plus me-2"></i> Register</button>
			</div>
		</form>
	</div>
</div>



@section Scripts{
	@if(ViewData["result"] != null && ViewData["result"] == "RegisterSuccessfuly"){
		<script>
			toastr["success"]("Register successfully", "Register")
		</script>
	}
	

}

			
